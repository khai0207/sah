<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:drop="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/w_h_full">
    <RelativeLayout
        android:background="@drawable/sdk_ui_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        style="@style/dialog_kqg_login">
        <ImageView
            android:layout_width="39dp"
            android:layout_height="45.75dp"
            android:layout_marginLeft="18.5dp"
            android:layout_marginTop="13.5dp"
            android:src="@drawable/sdk_logo"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#ff000000"
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/order_title_1"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="1.5dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/sdk_line01"
            android:layout_below="@+id/title_name"
            android:layout_alignLeft="@+id/title_name"/>
        <Button
            android:id="@+id/pwd_close"
            android:background="@drawable/sdk_x01_img"
            android:layout_width="33.75dp"
            android:layout_height="33.75dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
        <Button
            android:textColor="#ffffffff"
            android:id="@+id/btn_pay"
            android:background="@drawable/sdk_btn01"
            android:layout_width="117dp"
            android:layout_height="40.5dp"
            android:layout_marginBottom="25dp"
            android:text="@string/btn_pay"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linearLayout1"
            android:layout_width="330dp"
            android:layout_height="135dp"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/dialog_text_size"
                    android:typeface="normal"
                    android:textColor="#ff000000"
                    android:id="@+id/order_num_des"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/pay_num_des"/>
                <TextView
                    android:textSize="@dimen/dialog_text_size"
                    android:typeface="normal"
                    android:textColor="#ff000000"
                    android:id="@+id/order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/sdk_line02"
                android:layout_below="@+id/order_money"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/dialog_text_size"
                    android:typeface="normal"
                    android:textColor="#ff000000"
                    android:id="@+id/goods_des"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/pay_goods_des"/>
                <TextView
                    android:textSize="@dimen/dialog_text_size"
                    android:typeface="normal"
                    android:textColor="#ff000000"
                    android:id="@+id/goods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/sdk_line02"
                android:layout_below="@+id/order_money"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/dialog_text_size"
                    android:textColor="#ff000000"
                    android:id="@+id/textView1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/pay_order_cost_des"/>
                <TextView
                    android:textSize="@dimen/dialog_text_size"
                    android:typeface="normal"
                    android:textColor="#ff000000"
                    android:id="@+id/order_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/sdk_line02"
                android:layout_below="@+id/order_money"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
