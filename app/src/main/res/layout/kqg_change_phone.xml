<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:drop="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/w_h_full">
    <RelativeLayout
        android:background="@drawable/sdk_ui_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        style="@style/dialog_kqg_login">
        <ImageView
            android:layout_width="39dp"
            android:layout_height="45.75dp"
            android:layout_marginLeft="18.5dp"
            android:layout_marginTop="13.5dp"
            android:src="@drawable/sdk_logo"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#ff000000"
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/account_manager_1"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="1.5dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/sdk_line01"
            android:layout_below="@+id/title_name"
            android:layout_alignLeft="@+id/title_name"/>
        <Button
            android:id="@+id/pwd_close"
            android:background="@drawable/sdk_x01_img"
            android:layout_width="33.75dp"
            android:layout_height="33.75dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
        <EditText
            android:textSize="16sp"
            android:textColor="#ff000000"
            android:textColorHint="#9e9e9e"
            android:id="@+id/edit_old_phone"
            android:background="@drawable/edittext_bg"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginTop="78.5dp"
            android:hint="@string/change_phone_1"
            android:singleLine="true"
            android:maxLength="21"
            android:layout_centerHorizontal="true"
            android:inputType="number"/>
        <ImageView
            android:layout_width="329.5dp"
            android:layout_height="1dp"
            android:src="@drawable/sdk_line02"
            android:layout_alignBottom="@+id/edit_old_phone"
            android:layout_centerHorizontal="true"/>
        <EditText
            android:textSize="16sp"
            android:textColor="#ff000000"
            android:textColorHint="#9e9e9e"
            android:id="@+id/identfying_code"
            android:background="@drawable/edittext_bg"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginTop="138.5dp"
            android:hint="@string/change_phone_2"
            android:singleLine="true"
            android:maxLength="20"
            android:layout_centerHorizontal="true"
            android:inputType="textFilter"
            android:imeOptions="actionDone"/>
        <com.kqg.main.view.VerificationSeekBar
            android:id="@+id/verificationSeekBar"
            android:padding="1dp"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:maxHeight="45dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/bg_forgotpassword_seekbar"
            android:minHeight="45dp"
            android:thumb="@drawable/bg_seekbar_thumb"
            android:thumbOffset="-1dp"
            android:layout_alignTop="@+id/identfying_code"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="329.5dp"
            android:layout_height="1dp"
            android:src="@drawable/sdk_line02"
            android:layout_alignBottom="@+id/identfying_code"
            android:layout_centerHorizontal="true"/>
        <Button
            android:textSize="14sp"
            android:textColor="#ff000000"
            android:id="@+id/btn_get_phone_code"
            android:background="@drawable/sdk_btn02"
            android:layout_width="111.74dp"
            android:layout_height="25.16dp"
            android:layout_marginTop="13dp"
            android:text="@string/btn_get_phone_code"
            android:layout_alignTop="@+id/identfying_code"
            android:layout_alignRight="@+id/identfying_code"/>
        <Button
            android:textColor="#ffffffff"
            android:id="@+id/sure_bt"
            android:background="@drawable/sdk_btn01"
            android:layout_width="117dp"
            android:layout_height="40.5dp"
            android:layout_marginTop="200dp"
            android:text="@string/write_comfire"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="15sp"
            android:textColor="#585858"
            android:id="@+id/desc_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:text="@string/change_pwd_4"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
