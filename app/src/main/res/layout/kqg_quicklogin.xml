<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:drop="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@null"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/w_h_full">
    <RelativeLayout
        android:background="@drawable/sdk_ui_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        style="@style/dialog_kqg_quicklogin">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="14dp"
            android:layout_marginTop="13.5dp"
            android:src="@drawable/sdk_ui_game"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="230dp"
            android:layout_height="15dp"
            android:layout_marginTop="13.5dp"
            android:src="@drawable/sdk_pwd_head"
            android:layout_centerHorizontal="true"/>
        <RelativeLayout
            android:layout_width="270.5dp"
            android:layout_height="42dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="39dp">
            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sdk_ui_select_bg"
                android:scaleY="1.86"/>
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="270.5dp"
                android:layout_height="27dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/sdk_ui_bg1"/>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="249dp"
                android:layout_height="23dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/sdk_ui_bg_enter1"/>
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="270dp"
                android:layout_height="27dp"
                android:layout_marginTop="7dp">
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="19dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="17.5dp"
                    android:layout_marginTop="4.5dp"
                    android:src="@drawable/sdk_icon_maomi"/>
                <com.kqg.main.view.DropEditText
                    android:typeface="normal"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/edit_user_name"
                    android:background="@drawable/edittext_bg"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="17.5dp"
                    android:singleLine="true"
                    android:maxLength="21"
                    android:layout_weight="1"
                    android:inputType="textFilter"
                    drop:drawableRight="@drawable/sdk_unfold_btn"
                    drop:dropMode="flow_parent"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginBottom="22dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <Button
                android:textSize="@dimen/input_text_tint"
                android:textColor="#ffffffff"
                android:id="@+id/btn_register"
                android:background="@drawable/sdk_button_yellow"
                android:layout_width="66dp"
                android:layout_height="22dp"
                android:text="@string/button_regist"/>
            <Button
                android:textSize="@dimen/input_text_tint"
                android:textColor="#ffffffff"
                android:id="@+id/btn_login"
                android:background="@drawable/sdk_button_yellow"
                android:layout_width="66dp"
                android:layout_height="22dp"
                android:layout_marginLeft="17.5dp"
                android:text="@string/button_login"/>
            <Button
                android:textSize="@dimen/input_text_tint"
                android:textColor="#ffffffff"
                android:id="@+id/bind_phone"
                android:background="@drawable/sdk_button_yellow"
                android:layout_width="66dp"
                android:layout_height="22dp"
                android:layout_marginLeft="17.5dp"
                android:text="@string/bind_phone"/>
        </LinearLayout>
        <TextView
            android:textSize="8sp"
            android:textColor="#ff787878"
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="64dp"
            android:text="@string/forget_password_hint"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
